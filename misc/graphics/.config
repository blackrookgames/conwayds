@var appdir ../../app
@var hdrdir $(appdir)/hdr
@var srcdir $(appdir)/src

@imgimage champ_image ../champ.img.bmp
@dspalette champ_palette champ_image
@dstileset champ_tileset champ_image

@databuffer champ_paletted champ_palette
@databuffer champ_tilesetd champ_tileset

@file $(hdrdir)/DataGraphics.h

    #ifndef DATAGRAPHICS_H
    #define DATAGRAPHICS_H

    #include <nds.h>

    class DataGraphics
    {
        public:

        static const size_t champ_palette_size;
        static const u8 champ_palette_data[];
        static const size_t champ_tileset_size;
        static const u8 champ_tileset_data[];
    };

    #endif

@endfile

@file $(srcdir)/DataGraphics.cpp

    #include "DataGraphics.h"

    const size_t DataGraphics::champ_palette_size = $(cppsize champ_paletted);
    const u8 DataGraphics::champ_palette_data[] = $(cppdata champ_paletted);

    const size_t DataGraphics::champ_tileset_size = $(cppsize champ_tilesetd);
    const u8 DataGraphics::champ_tileset_data[] = $(cppdata champ_tilesetd);

@endfile